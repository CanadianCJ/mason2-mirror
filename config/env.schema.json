{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Mason .env schema",
  "type": "object",
  "properties": {
    "MASON_ENV":                 { "type":"string", "enum":["dev","prod"], "default":"dev" },
    "MASON_LOG_LEVEL":           { "type":"string", "enum":["debug","info","warn","error"], "default":"info" },
    "MASON_DISK_MIN_FREE_PCT":   { "type":"integer", "minimum":0, "maximum":90, "default":10 },
    "MASON_HIGH_RISK":           { "type":"integer", "enum":[0,1], "default":1 },
    "MASON_ALLOW_AUTO_HIGH_RISK":{ "type":"integer", "enum":[0,1], "default":1 },
    "MASON_HIGH_RISK_WINDOW":    { "type":"string", "pattern":"^\\d{2}:\\d{2}-\\d{2}:\\d{2}$", "default":"00:00-23:59" },
    "MASON_HEALTH_STABLE_RUNS":  { "type":"integer", "minimum":0, "default":1 },
    "MASON_MONEY_ENABLE":        { "type":"integer", "enum":[0,1], "default":0 }
  },
  "required": ["MASON_ENV"]
}
